{
  "name": "idea-explorer",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "A Cloudflare Worker that explores ideas using Claude and commits research to GitHub",
  "scripts": {
    "dev": "alchemy dev --stage dev",
    "deploy": "alchemy deploy --stage prod",
    "destroy": "alchemy destroy",
    "build:cli": "tsdown",
    "dev:cli": "tsdown --watch",
    "check": "ultracite check .",
    "fix": "ultracite fix .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsgo --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@cloudflare/workers-types": "^4.20260124.0",
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.10",
    "@typescript/native-preview": "^7.0.0-dev.20260126.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "lefthook": "^2.0.15",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "ultracite": "7.0.12",
    "vitest": "^4.0.18",
    "wrangler": "^4.60.0"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.23",
    "@clack/prompts": "^0.11.0",
    "@hono/zod-validator": "^0.7.6",
    "ai": "^6.0.50",
    "alchemy": "^0.83.1",
    "better-result": "^2.5.2",
    "cloudflare": "^5.2.0",
    "commander": "^14.0.2",
    "hono": "^4.11.6",
    "octokit": "^5.0.5",
    "zod": "^4.3.6"
  }
}
