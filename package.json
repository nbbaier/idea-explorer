{
  "name": "idea-explorer",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "A Cloudflare Worker that explores ideas using Claude and commits research to GitHub",
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "types": "wrangler types",
    "typecheck": "tsc --noEmit",
    "check": "ultracite check .",
    "fix": "ultracite fix .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "status": "bun run scripts/idea-status.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.7",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "typescript": "^5.9.3",
    "ultracite": "7.0.11",
    "vitest": "^4.0.17",
    "wrangler": "^4.58.0"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@hono/zod-validator": "^0.7.6",
    "cloudflare": "^5.2.0",
    "hono": "^4.11.3",
    "octokit": "^5.0.5",
    "zod": "^4.3.5"
  }
}
