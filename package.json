{
  "name": "idea-explorer",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "A Cloudflare Worker that explores ideas using Claude and commits research to GitHub",
  "scripts": {
    "deploy": "bun alchemy.run.ts",
    "deploy:wrangler": "wrangler deploy",
    "dev": "bun alchemy.run.ts --dev",
    "dev:wrangler": "wrangler dev",
    "start": "wrangler dev",
    "destroy": "bun alchemy.run.ts --destroy",
    "types": "wrangler types",
    "typecheck": "tsgo --noEmit",
    "check": "ultracite check .",
    "fix": "ultracite fix .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "status": "bun run scripts/idea-status.ts",
    "cli:build": "tsdown",
    "cli:dev": "tsdown --watch"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.7",
    "@typescript/native-preview": "^7.0.0-dev.20260122.3",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "lefthook": "^2.0.15",
    "tsdown": "^0.11.8",
    "typescript": "^5.9.3",
    "ultracite": "7.0.11",
    "vitest": "^4.0.17",
    "wrangler": "^4.58.0"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.18",
    "@clack/prompts": "^0.10.0",
    "@hono/zod-validator": "^0.7.6",
    "ai": "^6.0.44",
    "alchemy": "^0.83.1",
    "better-result": "^2.0.0",
    "cloudflare": "^5.2.0",
    "commander": "^14.0.0",
    "hono": "^4.11.3",
    "octokit": "^5.0.5",
    "zod": "^4.3.5"
  }
}
